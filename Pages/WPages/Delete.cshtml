@page
@model AI_WebsiteBuilder.Pages.WPages.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="section-top">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <div class="top-title">
                    <h4>Delete Website Page</h4>
                </div>
                <div class="main-actions">
                    <ol class="breadcrumb float-xl-end">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="breadcrumb-item"><a href="/AdminDashboard">Admin Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="./Index">Website Pages</a></li>
                        }
                        @if (User.IsInRole("Member"))
                        {
                            <li class="breadcrumb-item"><a href="/MemberDashboard">Member Dashboard</a></li>
                            <li class="breadcrumb-item"><a href="./Index">Website Pages</a></li>
                        }
                        <li class="breadcrumb-item active">Delete Page</li>
                    </ol>
                </div>
            </div>
            <hr />
        </div>
    </div>
</div>

<div class="section-bottom">
	<div class="row">
		<div class="col-md-6 card-flexfill">
			<div class="card">
				<div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.WebPage.Member)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WebPage.Member)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.WebPage.PageName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WebPage.PageName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.WebPage.PageDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WebPage.PageDescription)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.WebPage.PageContent)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WebPage.PageContent)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.WebPage.CreatedAt)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.WebPage.CreatedAt)
                        </dd>
                    </dl>
					<form method="post">
                        <input type="hidden" asp-for="WebPage.ID" />
						<div class="d-flex justify-content-between align-items-center">
							<a asp-page="Index" class="btn btn-secondary mt-1">Cancel</a>
							<button type="submit" value="Delete" class="btn btn-danger mt-1"
									onclick="return confirm('Are you sure you want to delete this booking?');">
								Delete Page
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="panel-body">
				<div class="note alert-warning">
					<div class="note-icon"><i class="fa fa-lightbulb"></i></div>
					<div class="note-content">
						<h5><b>Delete Page</b></h5>
						<p>
							You can permanently remove this Page, once done you will not be able to recover it.
						</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

